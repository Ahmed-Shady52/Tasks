<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
<!--        creating a server action to call the python method used to print the report from a menu-->
        <record id="action_report_certifications" model="ir.actions.server">
            <field name="name">Report Certificates</field>
            <field name="model_id" ref="employee_certifications.model_employee_certification"/>
            <field name="state">code</field>
            <field name="code">action = model.action_print_xlsx()</field>
        </record>

<!--        creating menus for organization used for printing reports-->
        <menuitem name="Report" id="employee_certifications.menu_report" parent="employee_certifications.menu_root" />
        <menuitem name="xlsx report" id="employee_certifications.menu_report_xlsx" parent="employee_certifications.menu_report" action="action_report_certifications"/>


    </data>
</odoo>