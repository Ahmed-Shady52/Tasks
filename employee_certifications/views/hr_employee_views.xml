<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
<!--        inheriting the hr view to be able to add the created certification field to be accessed there-->
    <record id="view_employee_form_inherit" model="ir.ui.view">
        <field name="name">view.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
<!--            creating a new page for the field to be placed inside-->
            <notebook position="inside">
                <page string="Certification" name="employee_certifications">
                    <field name="certification"/>
                </page>
            </notebook>
        </field>
    </record>

</odoo>


